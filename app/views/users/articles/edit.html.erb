<%= content_for :title, "記事の編集" %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center mb-4">記事の編集</h1>
      <%= form_with(model: @article, url: users_article_path(@article), local: true) do |form| %>
        <div class="form-group">
          <%= form.label :title, "タイトル" %>
          <%= form.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :content, "内容" %>
          <%= form.text_area :content, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :image, "画像" %>
          <br>
          <%= form.file_field :image, direct_upload: true, class: 'form-control-file' %>
        </div>

        <div class="text-center">
          <%= form.submit "更新する", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="text-left mt-3">
        <%= link_to '戻る', users_articles_path, class: "btn btn-link" %>
      </div>
    </div>
  </div>
</div>
